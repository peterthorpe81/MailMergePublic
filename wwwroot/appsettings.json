{
  "AzureAd": {
    "ProviderOptions": {
      "Authentication": {
        "Authority": "https://login.microsoftonline.com/common",
        "ClientId": "clientid",
        "ValidateAuthority": false
      },      
      //"DefaultAccessTokenScopes": "api://clientid/api",
      "DefaultAccessTokenScopes": [ "User.Read", "Mail.Send","Files.Read","Files.Read.All", "Sites.Read.All"],
      //"AdditionalScopesToConsent": [ "https://graph.microsoft.com/Files.Read", "User.Read", "Mail.Send","Files.Read.All"],
      "LoginMode": "redirect"
    }    
  },
  "MicrosoftGraph": {
    "BaseUrl": "https://graph.microsoft.com",
    "Version": "v1.0",
    "Scopes": [
      "https://graph.microsoft.com/User.Read",
      "https://graph.microsoft.com/Mail.Send",
      "https://graph.microsoft.com/Files.Read",
      "https://graph.microsoft.com/Files.Read.All",
      "https://graph.microsoft.com/Sites.Read.All"
    ]
  }
}
